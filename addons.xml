<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.unified.search" name="Unified search" version="1.0.1" provider-name="MrStealth">
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
    <import addon="script.module.xbmc.helpers" version="1.0.0"/>
    <import addon="script.module.translit" version="1.0.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" provides="video" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Unified search</summary>
    <description>This addon can find any videos in your plugin collection, which supports unified search (For personal use only)</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.mrstealth.gotham" name="Mrstealth XBMC Gotham" version="1.0.0" provider-name="MrStealth">
	<extension point="xbmc.addon.repository" name="MrStealth XBMC Add-ons Repository">
		<info compressed="false">https://raw.github.com/mrstealth/xbmc-gotham/master/addons.xml</info>
		<checksum>https://raw.github.com/mrstealth/xbmc-gotham/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.github.com/mrstealth/xbmc-gotham/master/zip/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Add-ons from MrStealth add-on repository</summary>
		<description>Download and install add-ons by mrstealth</description>
		<disclaimer>Add-ons for home usage in XBMC</disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id='script.module.favorites' version='1.0.0' name='Favorites for xbmc plugins' provider-name='MrStealth'>
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point='xbmc.service' library="default.py" />
  <extension point='xbmc.addon.metadata'>
    <platform>all</platform>
    <summary lang='en'>Favorites for xbmc plugins.</summary>
  </extension>
  <extension point='xbmc.python.module' library='lib' />
</addon>

<addon id='script.module.translit' version='1.0.0' name='Translit for xbmc plugins' provider-name='MrStealth'>
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point='xbmc.service' library="default.py" />
  <extension point='xbmc.addon.metadata'>
    <platform>all</platform>
    <summary lang='en'>Translit for xbmc plugins.</summary>
  </extension>
  <extension point='xbmc.python.module' library='lib' />
</addon>

<addon id='script.module.xbmc.helpers' version='1.0.0' name='Xbmc helpers module based on Parsedom module' provider-name='MrStealth'>
  <requires>
    <import addon="xbmc.python" version="2.1.0" />
  </requires>
  <extension point='xbmc.addon.metadata'>
    <platform>all</platform>
    <summary lang='en'>XbmcHelpers based on Parsedom module.</summary>
  </extension>
  <extension point='xbmc.python.module' library='lib' />
</addon>
</addons>
